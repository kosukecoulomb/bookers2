<table class="table">
  <% book.book_comments.each do |book_comment| %>
  <tr>
    <td><%= image_tag book_comment.user.get_profile_image(50,50) %></td>
    <td><%= book_comment.user.name %></td>
    <td><%= book_comment.created_at.strftime('%Y/%m/%d') %></td>
    <td><%= book_comment.comment %></td>
    <td>
    <% if (book_comment.user == current_user) || (book.user == current_user) %>
      <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true  %>
    <% end %>
    </td>
  <% end %>
  </tr>
</table>