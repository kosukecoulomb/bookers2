<div class="container">
  <div class="row">
    <div class="col-md-3">
        <h2 class="mt-3">User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
        <table class="table">
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </table>
  
         <div class="row">
          <button class="btn btn-outline-secondary btn-block">
          <%= link_to edit_user_path(@user), method: :get do %>
