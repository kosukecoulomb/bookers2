<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
        <table class="table">
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </table>

         <div class="row">
          <button class="btn btn-outline-secondary btn-block">
          <%= link_to edit_user_path(@user), method: :get do %>
          ã€€<i class="fas fa-user-cog"></i>
          </button>
          <% end %>
        </div>

        <div class="row">
          <h2 class="mt-3">New book</h2>
          <%= form_with model: @book do |f| %>
            <p>Title</p>
            <%= f.text_field :title %>

            <p>Opinion</p>
            <%= f.text_area :body %>

            <%= f.submit 'Create Book' %>
          <% end %>
        </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <%= link_to user_path(@showbook.user.id) do %>
              <%= image_tag @showbook.user.get_profile_image(80,80) %><br >
              <%= @showbook.user.name %>
            <% end %>
          </td>
          <td><%= @showbook.title %></td>
          <td><%= @showbook.body %></td>
        <% if @showbook.user == current_user %>
          <td><%= link_to "Edit", edit_book_path(@showbook) %></td>
          <td><%= link_to "Destroy", book_path(@showbook.id),method: :delete, "data-confirm" => "Are you sure?" %></td>
        <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>