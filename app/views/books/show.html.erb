<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="row">
        <%= render 'users/info', user: @user %>
      </div>

      <div class="row">
        <%= render 'new', book: @book_new %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <%= link_to user_path(@book.user.id) do %>
              <%= image_tag @book.user.get_profile_image(80,80) %><br >
              <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.favorited_by?(current_user) %>
              <%= link_to book_favorites_path(@book), method: :delete do %>
                <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
                <%= @book.favorites.count %> いいね
              <% end %>
            <% else %>
              <%= link_to book_favorites_path(@book), method: :post do %>
                <i class="fas fa-heart" aria-hidden="true"></i>
                <%= @book.favorites.count %> いいね
              <% end %>
            <% end %>
          </td>
          <td>
            <%= @book.book_comments.count %>コメント
          </td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to edit_book_path(@book) do%>
              <button class="btn btn-sm btn-success">Edit</button>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@book.id),method: :delete, "data-confirm" => "本当に消しますか？" do%>
            <button class="btn btn-sm btn-danger">Destroy</button>
            <% end %>
          </td>
        <% end %>
        </tr>
      </table>

      <table class="table">
        <% @book.book_comments.each do |book_comment| %>
        <tr>
          <td><%= image_tag book_commment.user.get_profile_image(50,50) %></td>
          <td><%= book_comment.user.name %></td>
          <td><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= post_comment.comment %></td>
        <% end %>
        </tr>
      </table>

      <div>
        <%= form_with model:[@book,@book_comment] do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
          <%= f.submit "送信する" %>
        <% end %>
      </div>

    </div>
  </div>
</div>