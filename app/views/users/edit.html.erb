<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Users info</h1>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <div class="box">
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" ,size: 40 %>
          </div>
        </div>
        <div class="form-group">
        <label for="inputImage">Image</label>
          <div class="box">
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </div>
        </div>
        <div class="form-group">
          <P>Introduction</P>
          <div class="box">
           <%= f.text_field :introduction ,size:40%>
          </div>
        </div>
        <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</div.