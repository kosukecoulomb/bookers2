<div class="container">
  <div class="row">
    <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
        <table>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </table>
  
        <div class="row"> 
          <%= link_to edit_user_path(@user), method: :get do %>
          ã€€<i class="fa-solid fa-user"></i>
          <% end %>
        </div>
        
        
        <div class="row">
          <h2 class="mt-3">New book</h2>
          <%= form_with model: @book do |f| %>
            <p>Title</p>
            <%= f.text_field :title %>
          
            <p>Opinion</p>
            <%= f.text_area :body %>
          
            <%= f.submit 'Create Book' %>
          <% end %>
        </div>
        
    </div>
        
    <div class="col-md-8 offset-md-1">    
      <h1>Users</h1>
        <table>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
          
          <% @users.each do |user| %>
          <tr>
              <td><%= image_tag user.get_profile_image(100,100) %></td>
              <td><P><%= user.name %></P></td>
              <td><%= link_to "show" , user_path(user.id) %></td>
          </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>