<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'info', user: @user %>
      <%= render 'books/new', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
        <table class="table">
          <tr>
            <th scope="col">image</th>
            <th scope="col">name</th>
            <th scope="col"></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>

          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(80,80) %></td>
            <td><P><%= user.name %></P></td>
            <td class="index_followings_counts">フォロー数:<%= user.followings.count %></td>
            <td class="index_followers_counts">フォロワー数:<%= user.followers.count %></td>
            <td>
            <% if user != current_user %>
              <div class="index_follow_btn">
                <%= render 'relationships/btn', user: user %>
              </div>
            <% end %>
            </td>
            <td><%= link_to "Show", user_path(user) %></td>
          </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>