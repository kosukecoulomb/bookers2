<h2>User info</h2>
  <table class="table">
    <tr>
      <th><%= image_tag user.get_profile_image(100,100) %></th>
    </tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    <tr>
      <th>follows</th>
      <th id="info_followings_counts_<%= user.id %>">
        <%= link_to user_followings_path(user.id) do %>
          <%= user.followings.count %>
        <% end %>
      </th>
    </tr>
    <tr>
      <th>followers</th>
      <th id="info_followers_counts_<%= user.id %>">
        <%= link_to user_followers_path(user.id) do %>
          <%= user.followers.count %>
        <% end %>
      </th>
    </tr>
  </table>

  <div class="row mb-5">
    <% if user == current_user %>
      <%= link_to edit_user_path(user), class:"btn btn-outline-secondary btn-block", method: :get do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    <% else %>
      <div id="user_<%= user.id %>">
        <%= render 'relationships/btn', user: user %>
      </div>
    <% end %>
  </div>